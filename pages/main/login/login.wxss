/* pages/login/login.wxss */
.login-container{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-family: 微软雅黑;
}
.logo-container{
  width: 100%;
  background-color: #C70019;
  text-align: center;
  margin-bottom: 100rpx;
}
.logo{
    width: 420rpx;
    height: 98rpx;
    margin: 120rpx 0;
}
.user-container{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 10rpx;
    border-bottom: 1rpx solid #848484;
    margin-bottom: 60rpx;
}
.p-icon{
    width: 50rpx;
    height: 50rpx;
}
.user-border{
    margin-left: 10rpx;
    border-left: 1rpx solid #848484;
    padding: 0 20rpx;
}
.login-btn{
    margin-top: 50rpx;
    width: 70%;
    background-color: #C70019;
    color: white;
    border-radius: 100rpx;
}
.button-hover{
  background-color: #BA0000;
}
.forget-text{
    color: #848484;
    font-size: 30rpx;
    margin-top: 60rpx;
    border-bottom: 1px solid #848484;
}