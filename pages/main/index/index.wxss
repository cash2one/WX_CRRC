.app-item{
  border-right: 1rpx solid #DFDFDF;
}
.app-item:nth-child(3n){
  border-right: 0rpx;
}
.app-text{
  margin-top: 20rpx;
  font-size: 30rpx;
}
.app-icon{
  height: 80rpx;
  width: 80rpx;
}
.app-badge{
  position: absolute;
  right: 0;
  top: 20rpx;
  width: 65rpx;
  display: flex;
  justify-content: center;
  border-bottom-left-radius: 50rpx;
  border-top-left-radius: 50rpx;
  background-color: #C70019;
  color: #FFFFFF;
  font-size: 30rpx;
}