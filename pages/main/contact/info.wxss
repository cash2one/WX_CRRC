/* info.wxss */
.info-container{
  display: flex;
  flex-direction: column;
}
.info-header{
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #C70019;
  border-radius: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 100rpx;
  color: #C70019;
  margin: 100rpx auto 30rpx auto;
}
.info-name{
  margin-top: 100rpx;
  text-align: center;
  margin-bottom: 15rpx;
  font-size: 50rpx;
}
.info-dept{
  text-align: center;
  color: #848484;
  font-size: 30rpx;
  margin-bottom: 100rpx;
}
.info-item{
  display: flex;
  flex-direction: column;
  padding: 20rpx 35rpx;
  border-bottom: 1px solid #DFDFDF;
}
.info-title{
  color: #848484;
  font-size: 30rpx;
}
.info-content{
  color: #C70019;
  margin-top: 15rpx;
}
.call{
  display: flex;
}
.tel{
  flex: 1;
}
.icon-call{
  width: 50rpx;
  height: 50rpx;
  justify-content: flex-end;
  align-items: flex-end;
}
.btn{
  background-color: #C70019;
  color: white;
  margin: 40rpx 20rpx;
}